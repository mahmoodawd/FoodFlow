
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="heading1">
        <item name="android:textSize">56sp</item>
        <item name="lineHeight">84sp</item>
    </style>

    <style name="heading2">
        <item name="android:textSize">48sp</item>
        <item name="lineHeight">72sp</item>
    </style>

    <style name="heading3">
        <item name="android:textSize">40sp</item>
        <item name="lineHeight">60sp</item>
    </style>

    <style name="heading4">
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">48sp</item>
    </style>

    <style name="heading5">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">36sp</item>
    </style>

    <style name="heading6">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">27sp</item>
    </style>

    <style name="title">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">21sp</item>
    </style>

    <style name="BtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:radius">16dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="activeBtnStyle" parent="@style/BtnStyle">
        <item name="color">@color/theme_light_primary</item>
    </style>

    <style name="inActiveBtnStyle" parent="@style/BtnStyle">
        <item name="backgroundTint">@color/theme_light_outline</item>
    </style>

    <style name="greyBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">#80222222</item>
    </style>

    <style name="whiteBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">500dp</item>
        <item name="android:background">@color/theme_light_onPrimary</item>
        <item name="android:radius">16dp</item>
    </style>

    <style name="roundedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/theme_light_onPrimary</item>
        <item name="android:radius">30dp</item>
    </style>

    <style name="inputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:radius">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:ems">10</item>

</resources>